<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fitToWidth="true" maxHeight="500.0" maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="500.0" styleClass="settings" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="com.treasure.hunt.view.settings.SettingsController">
    <content>
        <HBox alignment="TOP_CENTER">
            <children>
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label alignment="TOP_LEFT" contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
                               text="TreasureHunt">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </Label>
                        <Label alignment="TOP_LEFT" contentDisplay="CENTER" maxWidth="1.7976931348623157E308"
                               text="Settings">
                            <font>
                                <Font name="System Bold" size="22.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="20.0"/>
                            </VBox.margin>
                        </Label>
                        <VBox fx:id="settingsList" maxWidth="700.0" minWidth="300.0" styleClass="settings-list">
                            <VBox.margin>
                                <Insets bottom="20.0"/>
                            </VBox.margin>
                        </VBox>
                        <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                            <children>
                                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#save" text="Save"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </content>
</ScrollPane>
